<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :room_id %><br>
    <%= f.select :room_id,
    options_from_collection_for_select(Room.all, :id, :name, @listing.room_id) %>
  </div>
  <div class="field">
    <%= f.label :age_id %><br>
    <%= f.select :age_id,
    options_from_collection_for_select(Age.all, :id, :name, @listing.age_id) %>
  </div>
  <div class="field">
    <%= f.label :colors %><br>
    <%= collection_check_boxes(:listing, :color_ids, Color.all, :id, :name) %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
