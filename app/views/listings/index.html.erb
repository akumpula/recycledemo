

<p id="notice"><%= notice %></p>
<div class="hero">
  <div class="container-fluid"><a href="/listings">
    <div class="search">
      <h2>Find furniture</h2>
      <p><a href="/listings">See all listings</a></p>
      <%= form_tag(listings_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Listings" %>
<%= submit_tag "Search" %>
<% end %>
    </div>
    <h1 class="hero_header">Re.cycle It</h1>
    <h4>Buy & Sell furniture in your city</h4>
      <img src="http://res.cloudinary.com/re-cycle-it/image/upload/o_100/v1431746110/chairs_krdvwu.jpg" class="img-responsive"></a>
  </div>
</div>
  <div class="row">
      <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
      <%= image_tag listing.photo.url %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.Price) %></p>
          <%= link_to 'Show', listing, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-link" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<br>

<%= link_to 'New Listing', new_listing_path %>
